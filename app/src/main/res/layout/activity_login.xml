<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffce"
    tools:context="com.ai.face.ui.LoginActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:text="填写小区信息"
        android:textSize="30sp"
        android:textColor="#ff0000"/>

    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="小区："
                android:textColor="#000000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/xingming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint="小区名"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="#000000"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/xuehao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:hint="请输入编号"
                android:maxLines="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份："
                android:textColor="#000000"
                android:layout_gravity="center"
                android:textSize="20sp"/>

            <RadioGroup
                android:id="@+id/zhengzhig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/zhengzhi1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="管理员"/>

                <RadioButton
                    android:id="@+id/zhengzhi2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="普通使用者"/>


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="维护人："
                android:textColor="#000000"
                android:textSize="20sp"/>

            <Spinner
                android:id="@+id/yuanxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/ctype"/>

        </LinearLayout>

        <CheckBox
            android:id="@+id/rememberLoginCheckbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="记住信息"
            android:layout_marginLeft="30dp"
            android:textSize="16sp"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

    <soup.neumorphism.NeumorphButton
        android:id="@+id/login"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        android:text="点击继续"
        android:textSize="20sp"
        app:neumorph_backgroundColor="#F1CF68"
        android:background="#1070D1"/>

</LinearLayout>